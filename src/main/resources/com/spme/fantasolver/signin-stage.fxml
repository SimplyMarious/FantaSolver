<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spme.fantasolver.ui.SignInStage">
   <children>
      <Label layoutX="165.0" layoutY="56.0" prefHeight="55.0" prefWidth="271.0" text="Benvenuto in Fantasolver!" textAlignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <TextField id="username" fx:id="username" layoutX="221.0" layoutY="140.0" onInputMethodTextChanged="#onFieldChanged" promptText="username" />
      <TextField id="password" fx:id="password" layoutX="220.0" layoutY="188.0" onInputMethodTextChanged="#onFieldChanged" promptText="password" />
      <Button id="signin" fx:id="signin" disable="true" layoutX="274.0" layoutY="235.0" mnemonicParsing="false" onMousePressed="#onPressedSigninButton" text="Accedi" />
      <Label layoutX="224.0" layoutY="285.0" text="Non hai ancora un account?" />
      <Button id="signup" fx:id="signup" layoutX="267.0" layoutY="321.0" mnemonicParsing="false" onMousePressed="#onPressedSignupButton" text="Registrati" />
      <Label id="signinFailure" fx:id="signinFailure" layoutX="354.0" layoutY="240.0" text="Credenziali errate. Riprova." textFill="#fc0101" visible="false" />
   </children>
</AnchorPane>
